<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:weightSum="1.0"
    android:layout_height="fill_parent">


    <LinearLayout
        android:id="@+id/ac_nav_layout"
        android:layout_height="fill_parent"
        android:layout_width="fill_parent"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#a52500"
        android:clickable="true"
        android:layout_alignParentRight="true">

        <ImageView
            android:id="@+id/ac_nav"
            android:layout_width="25dp"
            android:layout_height="48dp"
            android:layout_centerInParent="true"
            android:src="@drawable/ic_nav"
            android:layout_alignParentRight="true"
            android:alpha="1"
            android:scaleType="center"

            />

        <ImageView
            android:id="@+id/ac_icon"
            android:layout_centerInParent="true"
            android:layout_width="48dp"
            android:visibility="gone"
            android:layout_height="48dp"
            android:src="@drawable/ic_menu_logo_dark"
            android:layout_toLeftOf="@+id/ac_back"
            android:scaleType="center"

            />

        <Views.TextViewFont
            android:layout_centerInParent="true"
            android:id="@+id/ac_title"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="نان محبوب"
            android:layout_toLeftOf="@+id/ac_icon"
            android:gravity="center_vertical"
            android:padding="10dp"
            android:textColor="#fff"

            android:textSize="@dimen/actionbar_title_size" />





    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_vertical"

        >

        <ImageView
            android:id="@+id/ac_action1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/hit"
            android:src="@drawable/basket"
            android:textColor="#fff"
            android:scaleType="fitXY"
            android:alpha="1" />

        <ImageView
            android:id="@+id/ac_action2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:textColor="#fff"
            android:visibility="gone"
            android:background="@drawable/hit"
            android:alpha="1" />

        <ImageView
            android:id="@+id/ac_action3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:scaleType="center"
            android:visibility="gone"
            android:textColor="#fff"
            android:background="@drawable/hit"
            android:alpha="1" />

    </LinearLayout>
</RelativeLayout>
