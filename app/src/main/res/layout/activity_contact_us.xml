<?xml version="1.0" encoding="utf-8"?>


    <ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#73e6e3ea"

        >

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="0dp"
            android:gravity="right"
            android:paddingRight="0dp"
            android:paddingTop="0dp"
            android:paddingBottom="0dp"
            android:orientation="vertical"
            android:focusable="true"
            android:focusableInTouchMode="true"
            tools:context="partopars.irdevelopers.nanmahboob.ContactUsActivity">


// Header

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="fill_parent"
                android:layout_height="220dp">



                <ImageView
                    android:layout_width="fill_parent"
                    android:layout_height="240dp"
                    android:id="@+id/imageView"
                    android:scaleType="fitXY"
                    android:src="@drawable/contact3"

                    />

                <Views.TextViewFont
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="تماس با ما"
                    android:id="@+id/titletextView"
                    android:textColor="#fff"
                    android:gravity="right"
                    android:padding="20dp"
                    android:background="#838e9191"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />

            </RelativeLayout>


            // Form


            <TextView
                android:layout_width="fill_parent"
                android:layout_height="60dp"
                android:text="نشانی : شیراز چهار راه مشیر جنب پاساژ مهدی نان محبوب"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                /> // Address

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:text="تلفن : 32222222-071"
                android:textSize="16sp"
                android:padding="10dp"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                /> //Tell


            <Views.EditTextFont
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:hint="نام و نام خانوادگی"
                android:textSize="14sp"
                android:padding="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:inputType="textPersonName"
                android:background="@drawable/textbox_background"
                android:id="@+id/name"
                />

            <Views.EditTextFont
                android:layout_width="fill_parent"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:padding="10dp"
                android:background="@drawable/textbox_background"
                android:inputType="phone"
                android:textSize="14sp"
                android:id="@+id/tel"
                android:hint="تلفن همراه"/>

            <Views.EditTextFont
                android:layout_width="fill_parent"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:maxLines="8"
                android:padding="10dp"
                android:background="@drawable/textbox_background"
                android:inputType="text"
                android:textSize="14sp"
                android:id="@+id/body_message"
                android:hint="متن "/>






        </LinearLayout>

    </ScrollView>


